{# src/SkyResource/GetJobInGermanyBundle/Resources/views/Page/sidebar.html.twig #}
          <div class="sidebar-module bordered-with-header green">
            <a class="top" href="{{ path('GetJobInGermanyBundle_search') }}"><h4><span class="glyphicon glyphicon-apple"></span>&nbsp;Fresh jobs</h4></a>
              <ul class="latest-jobs">
{% for job in latestJobs %}
                <li>
                  <a href="{{ path('GetJobInGermanyBundle_show',{'id':job.id,'slug':job.slug}) }}" title="{{ job.title }}">
                    <span class="position">{{ job.title }}</span></a><br />
                    <span class="company">at {{ job.company }}</span><br />
                    <span class="location">in {{ job.city }}</span><br />
                    <span class="date" title="published">Published: {{ job.publishedDate|created_ago }}</span><br />
                </li>
{% else %}
        <p>There are no recent jobs.</p>
{% endfor %}
              </ul>
          </div>
